        <!-- Editor Panel -->
        <div class="editor-panel">
            <div class="editor-tabs">
                <div class="editor-tab active" data-tab="contract">
                    <i class="fas fa-file-code"></i>
                    <span>mycontract.cpp</span>
                </div>
