# Count and display statistics
$totalFolders = 0
$totalFiles = 0

function Count-Structure {
    param (
        [hashtable]$Structure
    )
    
    foreach ($value in $Structure.Values) {
        if ($value -is [array]) {
            $script:totalFolders++
            $script:totalFiles += $value.Count
        }
        elseif ($value -is [hashtable]) {
            $script:totalFolders++
            Count-Structure -Structure $value
        }
    }
}

Count-Structure -Structure $FolderStructure

Write-Host "ğŸ“Š STATISTICS:" -ForegroundColor Cyan
Write-Host "  ğŸ“ Total Folders: $totalFolders" -ForegroundColor White
Write-Host "  ğŸ“„ Total Files: $totalFiles" -ForegroundColor White
