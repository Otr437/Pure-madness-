    try:
        redis_status = 'connected' if redis_client.ping() else 'disconnected'
    except:
        redis_status = 'disconnected'
    
    return jsonify({
        'status': 'online',
        'database': 'connected',
        'redis': redis_status,
        'celery': 'running'
    })

